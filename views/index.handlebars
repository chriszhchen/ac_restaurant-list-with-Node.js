<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳名稱" aria-label="Restaurant Name..."
            value="{{ keyword }}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">

  {{#unless restaurants}}
  <div class="row">
    <h3 class="not-found mx-auto">抱歉，找不到名稱與「<span class='keyword'>{{keyword}}</span>」相關的餐廳。</h3>
  </div>
  {{/unless}}
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row">
        {{#each restaurants}}
        <div class="col-12 col-sm-6 col-lg-4">
          <a href="/restaurants/{{ this._id }}" class="text-secondary">
            <div class="card mb-2">
              <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{ this.name }}</h6>
                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{ this.category }}
                </div>
                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{ this.rating }}
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
            </div>
          </a>
          <div class="function-buttons d-flex justify-content-end mb-4">
            <a class="btn btn-secondary mr-1" href="">編輯</a>
            <a class="btn btn-info mr-1" href="/restaurants/{{ this._id }}">詳細資訊</a>
            <button type="button" class="btn btn-danger">刪除</button>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="row create-btn my-3">
    <a href="/restaurants/new" class="btn btn-primary btn-lg mx-auto my-5">新增餐廳</a>
  </div>
</div>